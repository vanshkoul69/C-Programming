#include <stdio.h>

int main() {
    int N;

    // Read the number of rows
    scanf("%d", &N);

    // Loop through each row
    for (int i = 1; i <= N; i++) {
        // Print spaces first (decreasing)
        for (int j = 1; j <= N - i; j++) {
            printf("  "); // Two spaces for alignment with '* '
        }
        // Then print stars (increasing)
        for (int k = 1; k <= i; k++) {
            printf("* ");
        }
        // Move to the next line
        printf("\n");
    }

    return 0;
}
