#include <stdio.h>

int main() {
    int N;

    // Read the number of rows
    scanf("%d", &N);

    // Loop through each row
    for (int i = 1; i <= N; i++) {
        // Print leading spaces for centering (2 spaces per level)
        for (int j = 1; j <= N - i; j++) {
            printf("  ");
        }

        // Print stars separated by space (2*i - 1 stars per row)
        for (int k = 1; k <= (2 * i - 1); k++) {
            printf("* ");
        }

        // Move to the next line after each row
        printf("\n");
    }

    return 0;
}
