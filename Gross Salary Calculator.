#include <stdio.h>

int main() {
    int B; // Basic Salary
    float HRA, DA, gross;

    scanf("%d", &B);

    if (B <= 10000) {
        HRA = 0.20 * B;
        DA = 0.30 * B;
    } else if (B <= 20000) {
        HRA = 0.25 * B;
        DA = 0.40 * B;
    } else {
        HRA = 0.30 * B;
        DA = 0.50 * B;
    }

    gross = B + HRA + DA;

    printf("%.2f\n", gross); // Print Gross Salary up to 2 decimal places

    return 0;
}
