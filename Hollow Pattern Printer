#include <stdio.h>

int main() {
    int N, M;

    // Read input for rows and columns
    scanf("%d %d", &N, &M);

    // Loop through each row
    for (int i = 1; i <= N; i++) {
        // Loop through each column
        for (int j = 1; j <= M; j++) {
            // Print star if on the border (first or last row/column)
            if (i == 1 || i == N || j == 1 || j == M) {
                printf("* ");
            } else {
                // Print space inside the rectangle
                printf("  ");
            }
        }
        // Move to next line after each row
        printf("\n");
    }

    return 0;
}
