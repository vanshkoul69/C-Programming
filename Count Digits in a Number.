#include <stdio.h>
#include <stdlib.h> // for abs()

int main() {
    int N;
    scanf("%d", &N);

    // Handle the case when N is 0
    if (N == 0) {
        printf("1\n");
        return 0;
    }

    int count = 0;
    N = abs(N); // Make sure N is positive

    while (N > 0) {
        N /= 10;
        count++;
    }

    printf("%d\n", count);

    return 0;
}
